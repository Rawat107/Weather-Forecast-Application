{
  "name": "weather-forecast-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tailwindcss -i ./src/input.css -o ./src/output.css --minify && vite build",
    "start": "vite preview --host 0.0.0.0 --port 10000",
    "tw:watch": "tailwindcss -i ./src/input.css -o ./src/output.css --watch"
  },
  "devDependencies": {
    "vite": "^6.2.0"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.0.17",
    "serve": "^14.2.4",
    "tailwindcss": "^4.0.17"
  }
}
